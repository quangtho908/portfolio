{
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "singleQuote": false,
  "trailingComma": "es5",
  "parser": "babel-ts",
  "arrowParens": "always",
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "tabWidth": 2,
        "trailingComma": "none",
        "parser": "yaml"
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "parser": "markdown"
      }
    }
  ]
}
